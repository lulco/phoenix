{
    "name": "lulco/phoenix",
    "type": "library",
    "description": "Database Migrations for PHP",
    "keywords": ["PHP", "Database", "Migrations", "Multiple folders"],
    "license": "MIT",
    "require": {
        "php": ">= 7.1",
        "symfony/console": "^3.1|^4.0",
        "symfony/finder": "^3.1|^4.0"
    },
    "require-dev": {
        "nette/neon": "^2.3",
        "symfony/yaml": "^3.1|^4.0",
        "squizlabs/php_codesniffer": "^3.0",
        "phpunit/phpunit": "^7.0"
    },
    "autoload": {
        "classmap": ["src/"]
    },
    "autoload-dev": {
        "classmap": ["tests/"]
    },
    "suggest": {
        "nette/neon": "Allows use *.neon file as config file and class Phoenix\\Config\\Parser\\NeonConfigParser to parse it",
        "symfony/yaml": "Allows use *.yml / *.yaml file as config file and class Phoenix\\Config\\Parser\\YamlConfigParser to parse it"
    },
    "bin": ["bin/phoenix"]
}
