{
    "name": "lulco/phoenix",
    "type": "library",
    "description": "Database Migrations for PHP",
    "keywords": ["PHP", "Database", "Migrations", "Multiple folders", "Query builder", "Create", "Migrate", "Rollback", "Dump", "Status"],
    "license": "MIT",
    "require": {
        "php": ">= 7.4 <8.2",
        "ext-json": "*",
        "ext-pdo": "*",
        "symfony/console": "^3.1|^4.0|^5.0",
        "symfony/finder": "^3.1|^4.0|^5.0"
    },
    "require-dev": {
        "nette/neon": "^2.3|^3.0",
        "symfony/yaml": "^3.1|^4.0|^5.0",
        "phpunit/phpunit": ">7.2",
        "ramsey/uuid": "^3.7|^4.0"
    },
    "autoload": {
        "classmap": ["src/"]
    },
    "autoload-dev": {
        "classmap": ["tests/"]
    },
    "conflict": {
        "symfony/console": "3.4.31|4.3.4"
    },
    "suggest": {
        "nette/neon": "Allows use *.neon file as config file and class Phoenix\\Config\\Parser\\NeonConfigParser to parse it",
        "symfony/yaml": "Allows use *.yml / *.yaml file as config file and class Phoenix\\Config\\Parser\\YamlConfigParser to parse it"
    },
    "bin": ["bin/phoenix"]
}
